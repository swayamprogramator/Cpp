#include<iostream>
using namespace std;
void merge(int arr[],int p,int q,int r){
    int n1=q-p+1;
    int n2=r-q;
    int left[n1],right[n2];
    for(int i=0;i<n1;i++)left[i]=arr[p+i];
    for(int j=0;j<n2;j++)right[j]=arr[q+j+1];
    
    int i=0,j=0,k=p;
    while(i<n1 && j<n2){
        if(left[i]<right[j]){
            arr[k]=left[i];
            i++,k++;
        }
        else{
            arr[k]=right[j];
            j++,k++;
        }
    }
    while(i<n1){
        arr[k]=left[i];
        i++,k++;
    }
    while(j<n2){
        arr[k]=right[j];
        j++,k++;
    }

}
void mergesort(int arr[],int p,int r){
    if(p<r){
        int q=(p+r)/2;
        mergesort(arr,p,q);
        mergesort(arr,q+1,r);
        merge(arr,p,q,r);
    }
}


int main(){
    int n;
    printf("Enter no. of element you want:");
    cin>>n;
    int arr[n];
    printf("Enter Element:\n");
    for (int i=0;i<n;i++){
        cin>>arr[i];
    }
    mergesort(arr,0,n-1);
   for (int i=0;i<n;i++){
        cout<<arr[i]<<"\t";
    }
    return 0;
}
