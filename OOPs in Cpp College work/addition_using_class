// Adding two numbers
#include<iostream>
using namespace std;
class Addition {
    private :
    int n1,n2,sum;
    public:
    void inp(){
        cout <<"Enter two numbers = ";
        cin >>n1 >>n2;
    }
    void calc(){
        sum=n1+n2;
        
    }
    void out(){
        cout <<"Sum of "<< n1 << " and " << n2 << "is = " << sum;
    }   
};
int main(){
    Addition add;
    add.inp();
    add.calc();
    add.out();
    return 0;
}
